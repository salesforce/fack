<div class="w-full">
  <!-- Basic Info -->
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Name</strong>
    <p class="text-gray-700"><%= assistant.name %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Status</strong>
    <p class="text-gray-700"><%= assistant.status.humanize %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Owner</strong>
    <p class="text-gray-700"><%= assistant.user.email if assistant.user %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Description</strong>
    <textarea class="w-full p-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700" rows="4" disabled><%= assistant.description %></textarea>
  </div>
  <!-- Data Sources -->
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Quip URL</strong>
    <p class="text-gray-700"><%= assistant.quip_url %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Confluence Spaces</strong>
    <p class="text-gray-700"><%= assistant.confluence_spaces %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Libraries</strong>
    <p class="text-gray-700"><%= assistant.libraries %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Soql</strong>
    <p class="text-gray-700"><%= assistant.soql %></p>
  </div>
  <!-- Prompts & Settings -->
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Input</strong>
    <textarea class="w-full p-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700" rows="4" disabled><%= assistant.input %></textarea>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Output</strong>
    <textarea class="w-full p-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700" rows="4" disabled><%= assistant.output %></textarea>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Instructions</strong>
    <textarea class="w-full p-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700" rows="4" disabled><%= assistant.instructions %></textarea>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Context</strong>
    <textarea class="w-full p-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700" rows="4" disabled><%= assistant.context %></textarea>
  </div>
  <!-- Slack Configuration -->
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Slack Channel</strong>
    <p class="text-gray-700"><%= assistant.slack_channel_name %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Slack Channel Name Starts With</strong>
    <p class="text-gray-700"><%= assistant.slack_channel_name_starts_with %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Enable Channel Join Message</strong>
    <p class="text-gray-700"><%= assistant.enable_channel_join_message ? 'Yes' : 'No' %></p>
  </div>
  <!-- Document Creation -->
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Create Document on Approval</strong>
    <p class="text-gray-700"><%= assistant.create_doc_on_approval ? 'Yes' : 'No' %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Approval Keywords</strong>
    <p class="text-gray-700"><%= assistant.approval_keywords %></p>
  </div>
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">Library</strong>
    <p class="text-gray-700"><%= assistant.library.name if assistant.library_id %></p>
  </div>
  <!-- JSON Representation -->
  <div class="my-5">
    <strong class="block text-lg font-semibold text-gray-800 mb-2">JSON</strong>
    <textarea class="w-full p-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700" rows="10" disabled><%= assistant.to_json %></textarea>
  </div>
  <div class="mb-2">
    <strong>PagerDuty Recent Incidents:</strong>
    <%= assistant.pagerduty_recent_incidents ? 'Yes' : 'No' %>
  </div>
</div>
