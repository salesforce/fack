<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Chats" %>
    <div class="flex justify-between items-center">
    <div>
      <h1 class="font-bold text-4xl">Chats</h1>
      <p class="text-gray-600 mt-2 text-sm">These are previous chats you can review or continue.</p> <!-- Tagline description -->
    </div>
    <%= link_to "New +", assistants_path, class: "rounded-lg py-3 px-5 bg-sky-900 text-white block font-medium" %>
  </div>

  <div id="chats" class="min-w-full">
    <% @chats.each do |chat| %>
      <%= render chat %>
    <% end %>
  </div>
</div>
