<div class="container mx-auto px-4 py-8">
  <h1 class="font-bold text-3xl text-sky-800 mb-4">What Would You Like to Know?</h1>
  <div class="rounded-lg shadow-lg mb-8 p-4 mx-auto w-full border border-stone-200 bg-white">
    <%= render "questions/form", question: Question.new %>
  </div>

  <h1 class="text-3xl font-bold mb-8">My Activity</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Questions -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Questions</h2>
      <div class="space-y-4">
        <% @recent_questions.each do |question| %>
          <div class="border-b pb-2">
            <p class="text-gray-700">
              <%= link_to question.question, question_path(question), class: "text-sky-500 hover:text-sky-600" %>
            </p>
            <p class="text-sm text-gray-500">Asked <%= time_ago_in_words(question.created_at) %> ago</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Chats -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Chats</h2>
      <div class="space-y-4">
        <% @recent_chats.each do |chat| %>
          <div class="border-b pb-2">
            <p class="text-gray-700">
              <%= link_to chat.first_message || "Chat ##{chat.id}", chat_path(chat), class: "text-sky-500 hover:text-sky-600" %>
            </p>
            <p class="text-sm text-gray-500">Started <%= time_ago_in_words(chat.created_at) %> ago</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Assistants -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">Assistants</h2>
      <div class="space-y-4">
        <% @recent_assistants.each do |assistant| %>
          <div class="border-b pb-2">
            <p class="text-gray-700">
              <%= link_to assistant.name, assistant_path(assistant), class: "text-sky-500 hover:text-sky-600" %>
            </p>
            <p class="text-sm text-gray-500">Last active <%= time_ago_in_words(assistant.last_chat_time) %> ago</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 