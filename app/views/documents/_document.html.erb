<div class="flex justify-between items-center">
  <h1 class="text-3xl font-semibold <%= @document.enabled ? 'text-stone-900' : 'text-gray-500' %>">
    <%= document.title %>
    <% if document.deleted? %>
      <span class="text-lg text-red-600 font-normal ml-2">(Deleted)</span>
    <% end %>
  </h1>
  <div class="flex space-x-2">
    <% if policy(@document).edit? %>
      <div class="text-gray-700">
        <div class="inline-flex rounded-md shadow-sm" role="group">
          <% unless document.deleted? %>
            <%= link_to "Edit", edit_document_path, class: "border text-sky-700 border-sky-500 py-3 px-5 bg-white text-sm #{'border-r-0' if policy(@document).destroy?} rounded-l-lg #{'rounded-r-lg' unless policy(@document).destroy?} hover:bg-sky-500 hover:text-sky-100" %>
          <% end %>
          <% if policy(@document).destroy? %>
            <% if document.deleted? %>
              <%= link_to "Undelete", restore_document_path(@document), 
                          data: { 
                            "turbo-method": "patch",
                            "turbo-confirm": "Are you sure you want to restore this document?" 
                          },
                          class: "border text-green-700 border-green-300 py-3 px-5 bg-white text-sm rounded-lg hover:bg-green-50 hover:text-green-800" %>
            <% else %>
              <%= link_to "Delete", document_path(@document), 
                          data: { 
                            "turbo-method": "delete",
                            "turbo-confirm": "Are you sure you want to delete this document?" 
                          },
                          class: "border text-red-700 border-red-300 py-3 px-5 bg-white text-sm #{'rounded-l-lg' if document.deleted?} rounded-r-lg hover:bg-red-50 hover:text-red-800" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div id="<%= dom_id document %>" class="border bg-stone-200 rounded-lg shadow-lg mt-3">
  <div class="text-sm text-stone-700">
    <div class="flex justify-between items-center py-2 pl-4 bg-white border-b border-sky-500 rounded-t-lg text-stone-900">
      <div class="w-full">
        <p class="text-xs ">
          <%= render partial: 'shared/meta_info', locals: { email: document.user.email, created_at: document.created_at, updated_at: document.updated_at, synced_at: document.synced_at } %>
        </p>
        <% if document.url %>
          <div class="flex items-center space-x-1 text-xs mt-2">
            <span class="">URL:</span>
            <%= link_to document.url, document.url, class:"text-sky-500 hover:underline", target:"_source" %>
          </div>
        <% end %>
        <% if document.source_url %>
          <div class="flex items-center space-x-3 text-xs mt-2">
            <span class="">Source:</span>
            <%= link_to document.source_url, document.source_url, class:" hover:underline", target:"_source" %>
            <% if document.source_type == 'quip' %>
              <svg xmlns="http://www.w3.org/2000/svg" title="Quip Sync"fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 <%= "text-green-600" if document.last_sync_result == "SUCCESS" %> <%= "text-red-600" if document.last_sync_result == "FAILED" %>">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <!-- Voting and Flag Buttons on the right side -->
      <div class="flex items-center mx-4 space-x-2">
        <!-- Upvote/Downvote Buttons -->
        <% if current_user %>
          <% upvote_count = @document.votes_for.where(vote_scope: 'rating', vote_flag: true).count %>
          <% downvote_count = @document.votes_for.where(vote_scope: 'rating', vote_flag: false).count %>
          <% user_upvoted = current_user.voted_up_on?(@document, vote_scope: 'rating') %>
          <% user_downvoted = current_user.voted_down_on?(@document, vote_scope: 'rating') %>
          
          <div class="flex items-center space-x-1">
            <!-- Upvote Button -->
            <% if user_upvoted %>
              <a href="<%= document_path(@document, unvote: 1) %>" title="Remove upvote" class="flex items-center px-3 py-1 text-sm bg-green-100 text-green-800 border border-green-300 rounded-full hover:bg-green-200 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mr-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
                </svg>
                
                <%= upvote_count %>
              </a>
            <% else %>
              <a href="<%= document_path(@document, upvote: 1) %>" title="Upvote this document" class="flex items-center px-3 py-1 text-sm bg-gray-100 text-gray-700 border border-gray-300 rounded-full hover:bg-gray-200 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mr-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 10.5 12 3m0 0 7.5 7.5M12 3v18" />
                </svg>
                
                <%= upvote_count %>
              </a>
            <% end %>

            <!-- Downvote Button -->
            <% if user_downvoted %>
              <a href="<%= document_path(@document, unvote: 1) %>" title="Remove downvote" class="flex items-center px-3 py-1 text-sm bg-red-100 text-red-800 border border-red-300 rounded-full hover:bg-red-200 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mr-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
                </svg>
                <%= downvote_count %>
              </a>
            <% else %>
              <a href="<%= document_path(@document, downvote: 1) %>" title="Downvote this document" class="flex items-center px-3 py-1 text-sm bg-gray-100 text-gray-700 border border-gray-300 rounded-full hover:bg-gray-200 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mr-1">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 13.5 12 21m0 0-7.5-7.5M12 21V3" />
                </svg>
                <%= downvote_count %>
              </a>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
  <div class="px-4 py-6 text-gray-800 bg-white font-normal">
    <% cache document do %>
      <%= render partial: 'shared/markdown', locals: {text: document.document } %>
    <% end %>
  </div>
  <div class="text-xs px-4 py-3 text-gray-400 bg-gray-900 rounded-b-lg">
    <p class="text-gray-500">Info for nerds:</p>
    <p class=""><%= document.token_count %> Tokens | <%= document.embedding.present? ? "Embedding Ready" : "Embedding Missing"%> | External id <%= document.external_id.present? ? document.external_id : " not provided"%> | <%= document.enabled ? "Enabled" : "Disabled" %></p>
  </div>
</div>
<% if session[:debug] == "true" then %>
  <h1 class="text-2xl font-semibold py-4 text-gray-600">Embedding</h1>
  <div class="markdown-content leading-6">
    <div class="break-words font-mono p-5 border border-blue-500 rounded-b-lg bg-gray-300">
      <%= document.embedding unless document.embedding.nil? %>
    </div>
  </div>
<% end %>
