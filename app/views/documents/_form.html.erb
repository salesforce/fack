<%= form_with(model: document) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>
      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 my-2 w-full" %>
  </div>
  <div>
    <%= form.label :document, style: "display: block" %>
    <%= form.text_area :document, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 my-2 w-full" %>
  </div>
  <div>
    <div>
      <%= form.label :library, style: "display: block" %>
      <%= form.collection_select :library_id, Library.all, :id, :name, {prompt: 'Select a Library'}, { class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 my-2 w-full' } %>
    </div>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-sky-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
