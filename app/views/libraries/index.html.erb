<p style="color: green"><%= notice %></p>
<div class="">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl text-sky-800">Libraries</h1>
    <%= link_to 'New', new_library_path, class: "rounded-lg p-2 bg-sky-600 text-white block font-light" %>
  </div>
  <ul class="border mt-2 rounded-xl">
    <li class="grid grid-cols-3 gap-4 rounded-t-xl p-3 text-stone-400 text-sm bg-stone-100 font-bold border-b border-stone-600">
      <div class="">NAME</div>
      <div class="">SOURCE URL</div>
      <div class="">DOCUMENTS</div>
    </li>
    <% @libraries.each do |library| %>
      <li class="bg-white p-3 last:rounded-b-xl hover:bg-stone-50 border-b border-stone-200 last:border-b-0">
        <div class="lg:grid lg:grid-cols-3 gap-4">
          <!-- Column 1 content here -->
          <div class="">
            <%= link_to library.name, library, class: "hover:text-sky-500 font-semibold" %>
          </div>
          <div class="">
            <%= link_to library.source_url, library.source_url, class: "hover:text-sky-500 font-semibold text-xs" if library.source_url %>
          </div>
          <!-- Column 2 content here -->
          <div class="">
            <%= link_to library_documents_path(library),class:"hover:text-sky-500" do %>
              <div class="flex space-x-2"> <!-- Flex container -->
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                </svg>
                <span><%= library.documents_count %></span>
              </div>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
