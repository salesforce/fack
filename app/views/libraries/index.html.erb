<% content_for :title, "Libraries" %>

<p style="color: green"><%= notice %></p>
<div class="">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl text-sky-800">Libraries</h1>
    <%= link_to 'New', new_library_path, class: "rounded-lg p-2 bg-sky-600 text-white block font-light" %>
  </div>
  <ul class="border mt-2 rounded-xl">
    <% @libraries.each do |library| %>
      <li class="bg-white last:rounded-b-xl first:rounded-t-xl hover:bg-stone-50 border-b border-stone-200 last:border-b-0">
        <%= link_to library_path(library) do %>
          <div class="p-3 flex justify-between items-center space-x-4">
            <div class="flex-1">
              <span class="font-semibold hover:text-sky-500">
                <%= library.name %>
              </span>
              <% if library.source_url %>
                <div class="text-sky-500 text-xs mt-2">
                  <%= library.source_url %>
                </div>
              <% end %>
            </div>
            <div class="text-right">
              <span class="text-stone-400 text-sm">
                <%= pluralize(library.documents_count, 'document') %>
              </span>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
