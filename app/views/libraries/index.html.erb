<% content_for :title, "Libraries" %>
<div class="">
  <div class="flex justify-between items-center">
    <%= render 'shared/page_header', title: 'Libraries', subtitle: 'Collections of similar documents.' %>
    <% if policy(Library.new).create? %>
      <%= link_to 'New', new_library_path, class: "rounded-lg p-2 bg-sky-600 text-white block font-light" %>
    <% end %>
  </div>
  <%= paginate @libraries %>
  <ul class="border mt-2 rounded-xl">
    <% @libraries.each do |library| %>
      <li class="bg-white text-gray-800 last:rounded-b-xl first:rounded-t-xl hover:bg-sky-800 hover:text-white border-b border-stone-200 last:border-b-0">
        <%= link_to library_path(library) do %>
          <div class="p-3 flex justify-between items-center space-x-4">
            <div class="flex-1">
              <span class="font-semibold hover:text-gray-200">
                <%= library.name %>
              </span>
            </div>
            <div class="text-right">
              <span class="text-stone-400 text-sm">
                <%= pluralize(library.documents_count, 'document') %>
              </span>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
