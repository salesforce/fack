<%= turbo_frame_tag 'new_question' do %>
  <%= form_with model: question, url: questions_path, method: :post, data: { turbo_frame: "questions_list" } do |form| %>
    <% if question.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>
        <ul>
          <% question.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <form class="flex" action="#" method="post">
        <%= form.text_area :question, id:"text-field" ,placeholder:"I can answer questions about " + Library.all.order(documents_count: :desc).limit(4).pluck(:name).join(", ") + ", and more.",class:"bg-white placeholder-gray-400 focus:outline-none text-stone-700 py-2 px-3 rounded border-0 focus:outline-none focus:border-0 w-full" %>
        <div class="float-right">
          <button type="submit" id="submit-button" class="mt-1 bg-sky-500 text-stone-200 rounded hover:bg-sky-600 text-white py-2 px-5" >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
            </svg>
          </button>
        </div>
        <div>
          <%= form.collection_select :library_id, Library.all, :id, :name, {prompt: 'Limit Answers to Library (Optional)', selected: params[:library_id]}, { class: 'mt-1 pl-3 py-2 text-base border-gray-300 hover:text-stone-600 text-stone-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md' } %>        </div>
      </form>
    </div>
  <% end %>
<% end %>
