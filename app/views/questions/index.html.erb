<p style="color: green"><%= notice %></p>
<div class="">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl text-sky-800">Questions</h1>
    <div class="bg-stone-800 text-sky-300 p-2 rounded-lg text-sm">
      <%= (Question.all.where("created_at >= ?", 7.days.ago).where(able_to_answer: true).count.to_f / Question.all.where("created_at >= ?", 7.days.ago).count * 100).round(2) %>% <span class="font-light text-stone-400"> attempted answers</span>
    </div>
    <%= link_to 'Ask', new_question_path, class: "rounded-lg p-2 bg-sky-600 text-white block font-light" %>
  </div>
  <%= paginate @questions %>
  <%= render 'question_list',  questions: @questions %>
</div>
