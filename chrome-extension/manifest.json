{
  "manifest_version": 3,
  "name": "Document Fetcher Extension",
  "version": "1.0",
  "description": "Basic Chrome extension to authenticate and fetch documents",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://your-production-domain.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": [
        "http://localhost:3000/auth/*",
        "https://your-production-domain.com/auth/*",
        "http://*/auth/*",
        "https://*/auth/*"
      ],
      "js": ["auth-content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "AI Chat Assistant"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
